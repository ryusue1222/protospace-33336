<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ), prototype%>
  <div class="card__body">
    <%= link_to prototype.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
      <% if user_signed_in? %>
    <%= link_to prototype.user.name, user_path(current_user.id), class: :card__user %>
      <% end %>
  </div>
</div>